profile desktop {
    output "LG Electronics 38GN950 203NTAB86520" enable mode 3840x1600 position 1920,0

    exec swaymsg "output * adaptive_sync on"
    exec sh -c 'for i in 1 2 3 4 5 6 7 8 9; do swaymsg "workspace $i, move workspace to output \"LG Electronics 38GN950 203NTAB86520\""; done'
}

profile samsung-pip {
    output DP-8 mode 2560x1440 position 4480,0
    output DP-7 mode 2560x1440 position 1920,0
    output eDP-1 enable mode 1920x1200@60Hz position 0,0
    
    exec sh -c 'for i in 4 5; do swaymsg "workspace $i, move workspace to output DP-7"; done'
    exec sh -c 'for i in 1 2 3 6 7 8 9; do swaymsg "workspace $i, move workspace to output DP-8"; done'
    exec swaymsg "workspace 10, move workspace to output eDP-1"
}

profile dp6 {
    output DP-6 enable position 1920,0
    output eDP-1 enable mode 1920x1200 position 0,0
}

profile dp7 {
    output DP-7 enable position 1920,0
    output eDP-1 enable mode 1920x1200 position 0,0
}

profile laptop {
    output eDP-1 enable mode 1920x1200 position 0,0
}

profile mirror-hdmi {
    output eDP-1 enable mode 1920x1200 position 0,0
    output HDMI-A-1 enable mode 1920x1080 position 1920,0
    exec wl-present mirror eDP-1 --fullscreen-output HDMI-A-1 --fullscreen

    # alternatively, for wl-mirror < 0.16.4
    # exec wl-present mirror eDP-1 & sleep .5; wl-present fullscreen-output HDMI-A-1; wl-present fullscreen
}
